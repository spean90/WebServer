<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webserver.dao.MessageDao">

	<select id="getUserfullMessage" resultType="Message">
		select message_id messageId,user_id userId, deadline, code
		from message
		<where>
		<if test="message.userId != null">
			and user_id = #{message.userId}
		</if>
		<if test="message.deadline != null">
			and deadline >= #{message.deadline}
		</if>
		</where>
		order by deadline desc
		limit 1
	</select>
	
	
	<insert id="addMessage" parameterType="Message">
		insert into message (user_id, deadline,code) 
		VALUES (#{message.userId}, #{message.deadline},#{message.code})
	</insert>
	
</mapper>