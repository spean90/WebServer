<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webserver.dao.NewsDao">

	<select id="getNewsListByParams" resultType="News">
		select news_id newsId,user_id userId,title,content,status, create_time createTime,type
		from news
		<where>
		<if test="news.userId != null and news.userId != ''">
			and user_id = #{news.userId}
		</if>
		<if test="news.status != null and news.status != ''">
			and status = #{news.status}
		</if>
		<if test="news.type != null and news.type != ''">
			and type = #{news.type}
		</if>
		</where>
		order by news_id 
		<if test="pageBean!= null">
			limit #{pageBean.start}, #{pageBean.rows}
		</if>
	</select>
	
	
	<insert id="addNews" parameterType="News">
		insert into news (user_id,title,content,status, create_time,type) 
		VALUES (#{news.userId},#{news.title},#{news.content},#{news.status}, #{news.createTime}, #{news.type})
	</insert>
	
	<update id="updateNews" parameterType="News">
		update news 
		<set>
	 		<if test="news.status != null and news.status != ''">
				status = #{news.status}
			</if>
	 	</set>
	 	where news_id = #{news.newsId}
	</update>
</mapper>